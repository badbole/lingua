<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!-- Sequences for languages and translations -->
        <record id="seq_type_lingua" model="ir.sequence.type">
            <field name="name">Translation evidention</field>
            <field name="code">lingua_order</field>
        </record>
        <record id="seq_type_lingua_line" model="ir.sequence.type">
            <field name="name">Translation task</field>
            <field name="code">lingua_order_line</field>
        </record>

        <record id="seq_lingua_trans" model="ir.sequence">
            <field name="name">Translation Evidention</field>
            <field name="code">lingua_order</field>
            <field name="prefix">LO-%(y)s-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="seq_lingua_trans_line" model="ir.sequence">
            <field name="name">Translation task line</field>
            <field name="code">lingua_order_line</field>
            <field name="prefix">TT-%(y)s</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</openerp>