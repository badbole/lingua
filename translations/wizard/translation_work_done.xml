<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="translations_work_done_form_wizard" model="ir.ui.view">
            <field name="name">translations_work_done_form_wizard</field>
            <field name="model">translations.work.done</field>
            <field name="arch" type="xml">
                <form string="Number of cards done" >
                    <field name="cards"/>
                    <button string="Finish" name="enter_number_cards" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </form>
            </field>
        </record>
        <record id="translations_work_done_form__action" model="ir.actions.act_window">
            <field name="name">Translation work log entry</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">translations.work.done</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
 </openerp>